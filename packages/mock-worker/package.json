{
  "name": "@bb/master",
  "main": "dist/server.js",
  "version": "0.0.0",
  "scripts": {
    "start": "pnpm tsx src/server.ts",
    "build": "pnpm db:generate && pnpm db:deploy",
    "dev": "pnpm tsx watch src/server.ts",
    "db:deploy": "pnpm prisma migrate deploy --schema ./prisma/schema.prisma",
    "db:migrate": "pnpm prisma migrate dev --name auto --schema ./prisma/schema.prisma && pnpm prisma generate --schema ./prisma/schema.prisma",
    "db:generate": "pnpm prisma generate --schema ./prisma/schema.prisma",
    "db:reset": "pnpm prisma migrate reset -f --schema ./prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pidusage": "^2.0.5",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@bitcoin-js/tiny-secp256k1-asmjs": "^2.2.4",
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@prisma/client": "6.19.0",
    "@types/bip39": "3.0.0",
    "@types/node": "^22.8.4",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.7",
    "bip32": "5.0.0",
    "bip39": "3.1.0",
    "bitcoinjs-lib": "6.1.7",
    "dotenv": "^16.4.5",
    "ecpair": "^3.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "fastify-raw-body": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.2",
    "fastq": "^1.19.1",
    "json-schema-to-ts": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "lmdb": "^3.4.4",
    "mitt": "^3.0.1",
    "node-cron": "^3.0.3",
    "pidusage": "^3.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pm2": "^6.0.8",
